@using MyEshop_Phone.Application.ViewModel
@model VerifyCodeViewModel
@{
    Layout = null;
    ViewData["Title"] = "ورود به سایت";
    var initialRemainingSeconds = 0;
    var parsedSeconds = 0;
    if (ViewBag.RemainingSeconds != null && int.TryParse(ViewBag.RemainingSeconds.ToString(), out parsedSeconds))
    {
        initialRemainingSeconds = Math.Max(0, parsedSeconds);
    }
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#F8FAFC" />
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; img-src 'self' data: https:; script-src 'self' https://cdn.tailwindcss.com 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; connect-src 'self'">
    <meta name="referrer" content="strict-origin-when-cross-origin">
    <title>@ViewData["Title"]</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="/Layout/assets/css/style.css" />
</head>
<body class="bg-[#F8FAFC] text-gray-900 overflow-x-hidden font-[Vazirmatn] no-navbar" data-auth="guest" data-initial-remaining="@initialRemainingSeconds">
    <div id="top" aria-hidden="true"></div>



    <main id="main-content" class="min-h-screen flex items-center py-10">
        <div class="max-w-7xl mx-auto px-4">
            <div class="w-full max-w-md mx-auto bg-gradient-to-b from-white via-white to-slate-50 rounded-3xl border border-slate-100 shadow-2xl shadow-[#2563EB]/10 overflow-hidden sm:min-h-[560px]">
                <div class="p-8 sm:p-10">
                    <div class="flex items-center mb-6">
                        <a href="/" class="flex items-center gap-2 text-gray-600 hover:text-[#2563EB] transition-colors" aria-label="بازگشت به فروشگاه">
                            <span class="material-icon" aria-hidden="true">arrow_forward</span>
                            <span class="font-bold">بازگشت</span>
                        </a>
                    </div>

                    <div id="register-step" class="transition-opacity duration-300 ease-out">
                        <div class="text-center mb-8">
                            <a href="/" class="inline-flex items-center gap-2 mb-4" aria-label="بازگشت به صفحه اصلی">
                                <span class="material-icon text-3xl text-[#2563EB]" aria-hidden="true">shopping_bag</span>
                                <span class="font-black text-xl text-gray-900">ماهان شاپ</span>
                            </a>
                        </div>

                        <form method="post" id="verify-login-form" class="space-y-6" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div>
                                    <label for="firstname" class="block text-sm font-medium text-gray-700 mb-2">تایید شماره :</label>
                                    <div class="relative">
                                        <input asp-for="Code" id="verify-code-input" placeholder="کد ارسالی را وارد کنید" style="width:350px" autocomplete="one-time-code" inputmode="numeric" autocapitalize="off" maxlength="4" spellcheck="false" aria-describedby="verify-status" class="auth-input w-full pl-4 pr-10 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#2563EB]" required>
                                    </div>
                                </div>
                            </div>
                            <p class="text-sm text-gray-500">
                                زمان باقی‌مانده برای ارسال مجدد:
                                <span id="resend-timer" class="font-bold text-gray-700">00:00</span>
                            </p>
                            <p id="verify-status" class="text-sm hidden" role="alert"></p>
                            <div class="flex flex-wrap items-center gap-3">
                                <button style="background-color: #2563EB;padding: 14px;border-radius: 10px;width: 150px;color:#FFFFFF;font-weight:bold;" type="submit">
                                    تایید کد
                                </button>
                                <button type="button" id="resend-code-btn" class="px-4 py-3 rounded-xl border border-[#2563EB] text-[#2563EB] font-bold disabled:border-gray-300 disabled:text-gray-400 disabled:cursor-not-allowed">
                                    ارسال مجدد کد
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>




    <script defer src="/Layout/assets/js/layout.js"></script>
    <script defer src="/Layout/assets/js/script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const timerElement = document.getElementById('resend-timer');
            const resendButton = document.getElementById('resend-code-btn');
            const statusElement = document.getElementById('verify-status');
            const antiForgeryInput = document.querySelector('input[name="__RequestVerificationToken"]');

            const toSafeSeconds = (value, fallback = 0) => {
                const parsed = Number(value);
                if (!Number.isFinite(parsed)) return fallback;
                return Math.max(0, Math.floor(parsed));
            };

            const formatTime = (totalSeconds) => {
                const minutes = Math.floor(totalSeconds / 60);
                const seconds = totalSeconds % 60;
                return `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            };

            const setStatus = (message, isError) => {
                if (!statusElement) return;
                if (!message) {
                    statusElement.textContent = '';
                    statusElement.classList.add('hidden');
                    statusElement.classList.remove('text-red-600', 'text-green-600');
                    return;
                }
                statusElement.textContent = message;
                statusElement.classList.remove('hidden');
                statusElement.classList.toggle('text-red-600', isError);
                statusElement.classList.toggle('text-green-600', !isError);
            };

            let remainingSeconds = toSafeSeconds(document.body.dataset.initialRemaining, 0);
            let countdownId = null;

            const syncResendButtonState = () => {
                resendButton.disabled = remainingSeconds > 0;
            };

            const render = () => {
                timerElement.textContent = formatTime(remainingSeconds);
                syncResendButtonState();
            };

            const startCountdown = () => {
                if (countdownId) clearInterval(countdownId);
                countdownId = setInterval(() => {
                    if (remainingSeconds <= 0) {
                        clearInterval(countdownId);
                        countdownId = null;
                        syncResendButtonState();
                        return;
                    }
                    remainingSeconds -= 1;
                    render();
                }, 1000);
            };

            render();
            if (remainingSeconds > 0) startCountdown();

            resendButton.addEventListener('click', async () => {
                if (resendButton.disabled) return;

                resendButton.disabled = true;
                setStatus('', false);

                try {
                    const response = await fetch('@Url.Action("ResendLoginCode", "Account")', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': antiForgeryInput ? antiForgeryInput.value : ''
                        }
                    });

                    if (!response.ok) {
                        throw new Error('HTTP error');
                    }

                    const data = await response.json();
                    if (data.redirectToLogin) {
                        window.location.href = '@Url.Action("Login", "Account")';
                        return;
                    }

                    if (data.success) {
                        remainingSeconds = toSafeSeconds(data.remainingSeconds, 120);
                        setStatus(data.message || 'کد جدید ارسال شد', false);
                        render();
                        startCountdown();
                        return;
                    }

                    remainingSeconds = toSafeSeconds(data.remainingSeconds, 0);
                    setStatus(data.message || 'امکان ارسال مجدد وجود ندارد', true);
                    render();
                    if (remainingSeconds > 0) {
                        startCountdown();
                    }
                    else {
                        resendButton.disabled = false;
                    }
                } catch {
                    setStatus('خطا در ارتباط با سرور', true);
                    if (remainingSeconds <= 0) {
                        resendButton.disabled = false;
                    }
                }
            });
        });
    </script>
    <div data-include="footer"></div>
</body>
</html>
