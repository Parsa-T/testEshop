                    </a>
                    <div class="w-px h-4 bg-gray-300 mx-1 shrink-0 hidden md:block"></div>
                    @await Component.InvokeAsync("HeaderMenu")
                    <div class="w-px h-4 bg-gray-300 mx-1 shrink-0 hidden md:block"></div>
                    <a href="/AboutUs" class="secondary-nav-link" data-nav-id="contact">
                        <span class="material-icon text-lg" aria-hidden="true">contact_support</span>
                        ارتباط با ما
                    </a>
                </nav>
            </div>
        </div>
    </header>
    @await Component.InvokeAsync("Header")

    @RenderBody()
