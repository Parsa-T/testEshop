<body class="bg-[#F8FAFC] text-gray-900 overflow-x-hidden" data-auth="guest">
    <div aria-hidden="true" id="top"></div>
    <!-- هدر اصلی: ناوبری، جستجو و وضعیت ورود کاربر -->
    @* <div data-include="header"></div> *@
    <header id="navbar" class="fixed top-0 z-50 bg-[#F8FAFC]/90 backdrop-blur-md border-b border-gray-200/50 transition-all duration-300">

        <!-- ردیف بالا: لوگو، جستجو و اکشن‌های کاربر -->
        <div id="navbar-top" class="max-w-7xl mx-auto px-4 pt-3 pb-3 md:pb-0">
            <div id="navbar-row" class="flex flex-wrap md:flex-nowrap items-center justify-between gap-4">

                <!-- منوی موبایل (چپ)، لوگو (وسط) -->
                <div id="navbar-menu" class="flex items-center shrink-0 md:hidden">
                    <!-- دکمه باز کردن منو -->
                    <button id="mobile-menu-toggle" type="button" class="md:hidden nav-icon-btn ripple p-2 rounded-lg text-gray-700" aria-label="باز کردن منو" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="material-icon" aria-hidden="true">menu</span>
                    </button>
                </div>

                <!-- لوگو -->
                <a id="navbar-logo" href="/" class="flex items-center gap-2 group logo-container select-none whitespace-nowrap" aria-label="رفتن به صفحه اصلی">
                    <span class="material-icon navbar-brand-icon text-[#2563EB] text-lg sm:text-xl md:text-2xl leading-none" aria-hidden="true">storefront</span>
                    <span class="navbar-brand-text font-black text-gray-800 text-base sm:text-lg md:text-2xl leading-none">ماهان شاپ</span>
                </a>

                <!-- جستجو: مسیر و پارامترها توسط بک‌اند تنظیم شوند -->
                <div id="navbar-search" class="order-last md:order-none w-full md:max-w-xl mx-auto md:mx-6 transition-all duration-300">
                    <form class="relative group search-container" role="search" action="/Search" method="get">
                        <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                            <span class="material-icon text-gray-500 group-focus-within:text-[#2563EB] transition-colors" aria-hidden="true">search</span>
                        </div>
                        <input type="search"
                        name="q"
                        enterkeyhint="search"
                        aria-label="جستجوی محصولات"
                        class="w-full h-12 pr-12 pl-4 rounded-full bg-[#EFF6FF] border border-transparent hover:bg-[#DBEAFE]/50 focus:bg-white focus:border-[#2563EB] focus:shadow-[0_4px_12px_rgba(37,99,235,0.15)] outline-none transition-all duration-300 placeholder-gray-500 text-sm md:text-base"
                        placeholder="جستجو در بین هزاران محصول...">
                    </form>
                </div>

                <!-- اکشن‌های کاربر: علاقه‌مندی، سبد خرید، حساب -->
                <nav id="navbar-actions" class="flex items-center gap-2 md:gap-3 shrink-0" aria-label="ابزارهای کاربری">
                    @* <!-- علاقه‌مندی‌ها -->
                        <a href="{{base}}/pages/favorites.html" class="hidden md:flex nav-icon-btn ripple w-10 h-10 rounded-lg items-center justify-center text-gray-600" title="علاقه‌مندی‌ها" aria-label="علاقه‌مندی‌ها">
                            <span class="material-icon" aria-hidden="true">favorite_border</span>
                        </a> *@

