                            <a href="/Register" class="header-cta header-cta--primary" aria-label="ثبت نام">
                                <span class="material-icon text-lg" aria-hidden="true">person_add</span>
                                <span>ثبت نام</span>
                            </a>
                        }
                    </div>
                </nav>
            </div>
            <!-- ردیف پایین: دسته‌بندی‌ها -->
            <div id="navbar-bottom" class="border-t border-gray-100/80 md:border-none hidden md:block transition-all duration-300">
                <nav class="secondary-nav flex items-center justify-center w-full gap-1 md:gap-5 overflow-x-auto no-scrollbar py-2 md:py-2 mask-image-fade" aria-label="دسته‌بندی‌ها">
                    <a href="/" class="secondary-nav-link" data-nav-id="home">
                        <span class="material-icon text-lg" aria-hidden="true">home</span>
                        خانه
                    </a>
                    <a href="/Products" class="secondary-nav-link" data-nav-id="products">
