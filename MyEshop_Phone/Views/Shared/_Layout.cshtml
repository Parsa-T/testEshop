                    <div class="w-8 h-8 bg-[#DBEAFE] rounded-full flex items-center justify-center text-[#1E3A8A]">
                    <span class="material-icon text-lg" aria-hidden="true">person</span>
                    </div>
                    <span class="text-sm font-bold text-gray-700 group-hover:text-[#2563EB]">حساب کاربری</span>
                    </a>

                    <a href="{{base}}/pages/profile.html" class="auth-only md:hidden nav-icon-btn ripple w-10 h-10 rounded-full hover:bg-[#EFF6FF] flex items-center justify-center text-gray-600 hover:text-[#2563EB] transition-colors" aria-label="حساب کاربری">
                    <span class="material-icon" aria-hidden="true">person</span>
                    </a>
                    -->

                    <div class="guest-only hidden md:flex header-cta-group">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/Loguot" class="header-cta header-cta--ghost" aria-label="خروج">
                                <span class="material-icon text-lg" aria-hidden="true">login</span>
                                <span>خروج</span>
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="/admin" class="header-cta header-cta--primary" aria-label="ثبت نام">
                                    <span class="material-icon text-lg" aria-hidden="true">person_add</span>
                                    <span>پنل ادمین</span>
                                </a>
                            }
                            else
                            {
                                <a href="/paneluser" class="header-cta header-cta--primary" aria-label="ثبت نام">
                                    <span class="material-icon text-lg" aria-hidden="true">person_add</span>
                                    <span>پنل کاربری</span>
                                </a>
                            }
                        }
                        else
                        {
                            <a href="/Login" class="header-cta header-cta--ghost" aria-label="ورود">
                                <span class="material-icon text-lg" aria-hidden="true">login</span>
