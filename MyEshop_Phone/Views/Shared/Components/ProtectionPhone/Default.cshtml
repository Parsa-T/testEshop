@using MyEshop_Phone.Domain.Model
@model IEnumerable<_Products>

<section class="page-section max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center mb-6 md:mb-8">
        <h2 class="text-xl md:text-2xl font-bold text-[#1D1B20]">قاب و محافظ‌های جدید</h2>
        <a class="text-sm md:text-base text-[#2563EB] font-medium hover:underline" href="pages/products.html?cat=case">مشاهده همه</a>
    </div>
    <!-- کارت‌ها توسط بک‌اند رندر شوند؛ data-* برای سبد/علاقه‌مندی استفاده می‌شود -->
    <div aria-label="اسلایدر قاب و محافظ‌های جدید" aria-live="off" aria-roledescription="carousel" class="products-row drag-scroll flex gap-3 md:gap-6 overflow-x-auto no-scrollbar pb-8 px-2 snap-x snap-mandatory" role="region" tabindex="0">
        @foreach(var item in Model)
        {
            <article class="product-card product-card--hero has-flush-media bg-white rounded-3xl p-3.5 md:p-4 border border-gray-100 group shrink-0 snap-start w-[44vw] min-w-[44vw] sm:w-[270px] sm:min-w-[270px] md:w-[300px] md:min-w-[300px]" data-brand="Spigen" data-category="case" data-compare-price="850000" data-currency="IRR" data-image="https://placehold.co/900x900/1f2937/FFFFFF?text=Armor+Case" data-name="قاب ضدضربه سری Armor" data-pid="case-latest-001" data-price="690000" data-sku="CASE-ARMOR-01">
                <div class="relative">
                    <div class="product-media product-media--flush rounded-2xl bg-white flex items-center justify-center overflow-hidden" data-media-height="900" data-media-width="900">
                        <img alt="@item.Title" class="w-full h-full object-cover" height="900" loading="lazy" src="/AdminPanel/Photo/Products/@item.ImageName" width="900" />
                    </div>
                    @* <div aria-label="رنگ‌های موجود" class="product-card-color-strip">
                        <span aria-label="مشکی" class="color-swatch bg-slate-900" data-color-hex="#0f172a" title="مشکی"></span>
                        <span aria-label="خاکستری" class="color-swatch bg-zinc-400" data-color-hex="#a1a1aa" title="خاکستری"></span>
                    </div> *@
                </div>
                <div class="mt-3">
                    <h3 class="font-extrabold text-gray-900 text-sm md:text-base leading-tight truncate">@item.Title</h3>
                    <p class="text-[11px] md:text-xs text-gray-500 mt-1">برند: @item.ShortDescription</p>
                </div>
                <div class="mt-3 flex items-end justify-between gap-3">
                    <div class="min-w-0">
                        <div class="text-[10px] md:text-xs text-gray-400 line-through">@item.Price.ToString("N0")</div>
                        <div class="text-base md:text-lg font-black text-[#2563EB] leading-tight">
                            @item.Price.ToString("N0") <span class="text-[10px] md:text-xs font-medium text-gray-500">تومان</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-2">
                        <button aria-label="افزودن به علاقه‌مندی" class="nav-icon-btn ripple w-10 h-10 rounded-2xl bg-white border border-gray-100 text-gray-700 flex items-center justify-center hover:bg-[#EFF6FF] transition" type="button">
                            <span class="material-icon text-[22px]">favorite_border</span>
                        </button>
                        <button aria-label="افزودن به سبد خرید" class="nav-icon-btn ripple w-10 h-10 rounded-2xl bg-[#2563EB] text-white flex items-center justify-center hover:bg-[#1E3A8A] transition shadow-sm" type="button">
                            <span class="material-icon text-[22px]">add</span>
                        </button>
                    </div>
                </div>
            </article>
        }
    </div>
</section>