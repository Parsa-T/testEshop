@{
    ViewData["Title"] = "ماهان شاپ | خرید آنلاین محصولات دیجیتال";
}

<main id="main-content">
    <h1 class="sr-only">ماهان شاپ | فروشگاه آنلاین لوازم جانبی موبایل</h1>
    <!-- بنر اصلی: تصاویر و لینک‌ها توسط بک‌اند مدیریت شوند -->
    <section class="banner-section pt-4 pb-2 px-0 sm:px-4 max-w-none sm:max-w-7xl sm:mx-auto" id="banner-section">
        <!-- ساختار اسلایدر (banner-wrapper/banners) برای اسکریپت ضروری است -->
        <!-- استانداردسازی ارتفاع/ریسپانسیو: موبایل کمی بلندتر، از sm به بالا مطابق هیروهای رایج -->
        <div class="banner-container h-[300px] sm:h-64 md:h-80 lg:h-96 rounded-none sm:rounded-3xl shadow-md relative overflow-hidden group">
            <div class="banner-wrapper h-full" id="banner-wrapper">
                <div class="banner-slide h-full active">
                    <!-- ابعاد پیشنهادی تصویر: 1600x600 (نسبت ~8:3) -->
                    <img alt="Banner 1" decoding="async" fetchpriority="high" height="600" loading="eager" src="/Layout/assets/img/ban copy.webp" width="1600" />
                </div>
                <div class="banner-slide h-full">
                    <img alt="Banner 2" decoding="async" height="600" loading="lazy" src="/Layout/assets/img/ban2.webp" width="1600" />
                </div>
                <div class="banner-slide h-full">
                    <img alt="Banner 3" decoding="async" height="600" loading="lazy" src="/Layout/assets/img/2.webp" width="1600" />
                </div>
                <div class="banner-slide h-full">
                    <img alt="Banner 4" decoding="async" height="600" loading="lazy" src="/Layout/assets/img/ban4.webp" width="1600" />
                </div>
            </div>
            <div aria-label="اسلایدر بنر" class="banner-indicators" id="banner-indicators">
                <button aria-label="بنر 1" class="banner-dot active" data-index="0" type="button"></button>
                <button aria-label="بنر 2" class="banner-dot" data-index="1" type="button"></button>
                <button aria-label="بنر 3" class="banner-dot" data-index="2" type="button"></button>
                <button aria-label="بنر 4" class="banner-dot" data-index="3" type="button"></button>
            </div>
        </div>
    </section>
    <!-- دسته‌بندی‌های محبوب: عنوان/تصویر/لینک توسط بک‌اند تنظیم شود -->
    <section class="page-section max-w-7xl mx-auto px-4" id="categories">
        <h2 class="text-xl md:text-2xl font-bold text-[#1D1B20] mb-4 md:mb-6">دسته بندی‌های محبوب</h2>
        <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-2 sm:gap-4 md:gap-6">
            <!-- کارت بلند (قاب و محافظ) - در دسکتاپ دو ردیف را پوشش می‌دهد -->
            <a aria-label="دسته‌بندی قاب گوشی" class="category-card phone-case col-span-2 lg:row-span-2 lg:col-span-1 rounded-2xl category-case" data-icon="smartphone" href="/Products" style="--cat-focal-y: 45%; --cat-focal-y-mobile: 30%;">
                <!-- ابعاد پیشنهادی تصویر: 1200x1600 (نسبت 3:4) -->
                <picture><source media="(max-width: 640px)" srcset="/Layout/assets/img/categories/case-mobile.webp" /><img alt="تصویر دسته‌بندی قاب گوشی" class="category-img absolute inset-0 w-full h-full object-cover" height="1600" loading="lazy" src="/Layout/assets/img/categories/case-desktop.webp" width="1200" /></picture><span aria-hidden="true" class="category-overlay"></span>
                <div class="relative z-[3] p-8 h-full flex flex-col justify-center gap-4"> </div>
            </a>
            <!-- دو کارت کنار هم: گوشی هوشمند + اکسسوری -->
            <a aria-label="دسته‌بندی گوشی هوشمند" class="category-card rounded-lg md:rounded-2xl h-44 md:h-48 category-phone" data-icon="smartphone" href="/Products">
                <!-- ابعاد پیشنهادی تصویر: 1200x900 (نسبت 4:3) -->
                <img alt="تصویر دسته‌بندی گوشی هوشمند" class="category-img absolute inset-0 w-full h-full object-cover" height="900" loading="lazy" src="/Layout/assets/img/categories/phone.webp" width="1200" /><span aria-hidden="true" class="category-overlay"></span>
            </a>
            <a aria-label="دسته‌بندی اکسسوری" class="category-card rounded-lg md:rounded-2xl h-44 md:h-48 category-accessory" data-icon="headphones" href="/Products">
                <!-- ابعاد پیشنهادی تصویر: 1200x900 (نسبت 4:3) -->
                <img alt="تصویر دسته‌بندی اکسسوری" class="category-img absolute inset-0 w-full h-full object-cover" height="900" loading="lazy" src="/Layout/assets/img/categories/accessory.webp" width="1200" /><span aria-hidden="true" class="category-overlay"></span>
                <div class="absolute inset-0 flex flex-col justify-center px-6 md:px-8 z-[3]">
                </div>
            </a>
            <!-- کارت‌های استاندارد زیر کارت افقی -->
            <a aria-label="دسته‌بندی گلس و محافظ" class="category-card rounded-lg md:rounded-2xl h-44 md:h-48 category-glass" data-icon="shield" href="/Products">
                <!-- ابعاد پیشنهادی تصویر: 1200x900 (نسبت 4:3) -->
                <img alt="تصویر دسته‌بندی گلس و محافظ" class="category-img absolute inset-0 w-full h-full object-cover" height="900" loading="lazy" src="/Layout/assets/img/categories/glass.webp" width="1200" /><span aria-hidden="true" class="category-overlay"></span>
                <div class="absolute inset-0 flex flex-col justify-center px-6 md:px-8 z-[3]">
                </div>
            </a>
            <a aria-label="دسته‌بندی شارژ" class="category-card rounded-lg md:rounded-2xl h-44 md:h-48 category-charger" data-icon="bolt" href="/Products">
                <!-- ابعاد پیشنهادی تصویر: 1200x900 (نسبت 4:3) -->
                <img alt="تصویر دسته‌بندی شارژ" class="category-img absolute inset-0 w-full h-full object-cover" height="900" loading="lazy" src="/Layout/assets/img/categories/charger.webp" width="1200" /><span aria-hidden="true" class="category-overlay"></span>
                <div class="absolute inset-0 flex flex-col justify-center px-6 md:px-8 z-[3]">
                </div>
            </a>
            <!-- دو کارت کنار هم: کاور ایرپاد و گجت -->
            <a aria-label="دسته‌بندی کاور ایرپاد" class="category-card lg:col-span-1 rounded-lg md:rounded-2xl h-44 md:h-48 category-ipad" data-icon="headphones" href="/Products">
                <!-- ابعاد پیشنهادی تصویر: 1200x900 (نسبت 4:3) -->
                <img alt="تصویر دسته‌بندی کاور ایرپاد" class="category-img absolute inset-0 w-full h-full object-cover" height="900" loading="lazy" src="/Layout/assets/img/categories/airpod.webp" width="1200" /><span aria-hidden="true" class="category-overlay"></span>
                <div class="absolute inset-0 flex flex-col justify-center px-8 z-[3]">
                </div>
            </a>
            <a aria-label="دسته‌بندی گجت" class="category-card lg:col-span-1 rounded-lg md:rounded-2xl h-44 md:h-48 category-gadget" data-icon="diamond" href="/Products">
                <!-- ابعاد پیشنهادی تصویر: 1200x900 (نسبت 4:3) -->
                <img alt="تصویر دسته‌بندی گجت" class="category-img absolute inset-0 w-full h-full object-cover" height="900" loading="lazy" src="/Layout/assets/img/categories/gadget.webp" width="1200" /><span aria-hidden="true" class="category-overlay"></span>
                <div class="absolute inset-0 flex flex-col justify-center px-6 md:px-8 z-[3]">
                </div>
            </a>
        </div>
    </section>
    <!-- محصولات پیشنهادی: لیست از API پیشنهادها -->
    @await Component.InvokeAsync("RecommendedProducts")
    @await Component.InvokeAsync("BestSeller")
    <!-- بنر میانی: تصویر پس‌زمینه و متن‌ها قابل مدیریت از بک‌اند -->
    <section class="mid-banner-section">
        <div class="case-promo-min case-promo-min--banner rounded-2xl md:rounded-3xl p-5 md:p-7" style="--case-promo-img: url('/Layout/assets/img/mid-banner.png');">
            <div class="case-promo-grid">
                <div class="case-promo-copy case-promo-copy--glass">
                    <span class="case-promo-pill">قاب و محافظ</span>
                    <h2 class="case-promo-title">زیبایی مینیمال، امنیت واقعی</h2>
                    <p class="case-promo-subtitle">
                        قاب‌های تمیز و گلس‌های دقیق برای محافظت روزمره بدون شلوغی.
                    </p>
                    <div class="case-promo-meta">
                        <span><span aria-hidden="true" class="material-icon">shield</span> ضدضربه</span>
                        <span><span aria-hidden="true" class="material-icon">visibility_off</span> پرایوسی</span>
                        <span><span aria-hidden="true" class="material-icon">verified</span> اصالت کالا</span>
                    </div>
                    <div class="case-promo-actions">
                        <a class="case-promo-cta case-promo-cta--primary" href="/Products">خرید قاب گوشی</a>
                        <a class="case-promo-cta case-promo-cta--ghost" href="/Products">خرید گلس و محافظ</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("ProtectionPhone")
    <!-- کارت‌های تبلیغاتی: برای تصویر هر کارت مقدار --promo-card-img را تغییر دهید -->
    <section class="page-section page-section--compact max-w-7xl mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-4 md:gap-6">
            <a aria-label="مشاهده محصولات شارژر" class="promo-card rounded-2xl md:rounded-3xl p-6 md:p-8 relative overflow-hidden flex items-center text-white min-h-[200px] md:min-h-[240px] group card-hover" href="/Products" style="--promo-card-img: url('/Layout/assets/img/categories/charger-mid.webp'); --promo-card-bg: #1E3A8A; --promo-card-overlay: linear-gradient(120deg, rgba(15, 23, 42, 0.08), rgba(15, 23, 42, 0.3)); --promo-card-overlay-opacity: 0.25; --promo-card-glow-opacity: 0.16; --promo-card-glow-opacity-hover: 0.28; --promo-card-height: 311px; --promo-card-content-bg: rgba(15, 23, 42, 0.18); --promo-card-content-bg-mobile: rgba(15, 23, 42, 0.15); --promo-card-content-border: rgba(219, 234, 254, 0.18); --promo-card-content-text: #F8FAFC; --promo-card-content-muted: #DBEAFE; --promo-card-content-cta: #E2E8F0; --promo-card-content-cta-hover: #FFFFFF; --promo-card-content-shadow: 0 12px 18px rgba(15, 23, 42, 0.1); --promo-card-content-right: 26px; --promo-card-content-bottom: 28px; --promo-card-content-blur-offset: 1px; --promo-card-icon-color: rgba(255, 255, 255, 0.2);">
                <div class="promo-card__content">
                    <span class="promo-card__eyebrow text-xs md:text-sm mb-1 md:mb-2 block">شارژ سریع و مطمئن</span>
                    <h3 class="promo-card__title text-xl md:text-2xl font-bold mb-3 md:mb-4">شارژر</h3>
                    <span class="promo-card__cta text-xs md:text-sm transition">مشاهده شارژرها</span>
                </div>
                <div aria-hidden="true" class="absolute left-2 md:left-4 bottom-2 md:bottom-4 w-24 h-24 md:w-32 md:h-32 flex items-center justify-center opacity-80">
                    <span class="material-icon promo-card__icon transform -rotate-12">bolt</span>
                </div>
            </a>
            <a aria-label="مشاهده محصولات اکسسوری" class="promo-card rounded-2xl md:rounded-3xl p-6 md:p-8 relative overflow-hidden flex items-center text-[#1E3A8A] min-h-[200px] md:min-h-[240px] group card-hover" href="/Products" style="--promo-card-img: url('/Layout/assets/img/categories/accessory-mid.webp'); --promo-card-bg: #DBEAFE; --promo-card-overlay: linear-gradient(120deg, rgba(15, 23, 42, 0.05), rgba(15, 23, 42, 0.18)); --promo-card-overlay-opacity: 0.22; --promo-card-glow-opacity: 0.14; --promo-card-glow-opacity-hover: 0.26; --promo-card-height: 311px; --promo-card-content-bg: rgba(248, 250, 252, 0.32); --promo-card-content-bg-mobile: rgba(248, 250, 252, 0.25); --promo-card-content-border: rgba(148, 163, 184, 0.22); --promo-card-content-text: #0F172A; --promo-card-content-muted: #1F2937; --promo-card-content-cta: #111827; --promo-card-content-cta-hover: #0F172A; --promo-card-content-shadow: 0 10px 14px rgba(15, 23, 42, 0.06); --promo-card-content-right: 26px; --promo-card-content-bottom: 30px; --promo-card-content-blur-offset: 0.5px; --promo-card-icon-color: rgba(71, 85, 105, 0.28);">
                <div class="promo-card__content">
                    <span class="promo-card__eyebrow text-xs md:text-sm mb-1 md:mb-2 block">اکسسوری‌های شیک و کاربردی</span>
                    <h3 class="promo-card__title text-xl md:text-2xl font-bold mb-3 md:mb-4">اکسسوری</h3>
                    <span class="promo-card__cta text-xs md:text-sm transition">مشاهده اکسسوری‌ها</span>
                </div>
                <div aria-hidden="true" class="absolute left-2 md:left-4 bottom-2 md:bottom-4 w-24 h-24 md:w-32 md:h-32 flex items-center justify-center opacity-80">
                    <span class="material-icon promo-card__icon promo-card__icon--dark transform rotate-12">headphones</span>
                </div>
            </a>
        </div>
    </section>
    <!-- جدیدترین محصولات -->
    @await Component.InvokeAsync("NewProducts")
</main>
