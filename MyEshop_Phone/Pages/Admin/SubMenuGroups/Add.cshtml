@page
@model MyEshop_Phone.Pages.Admin.SubMenuGroups.AddModel
@{
    ViewBag.Title = "زیر منوی جدید";
}

<form method="post">
    <label>انتخاب گروه</label>
    <select asp-for="AddSubMenu.Products_GroupsId" class="form-control" style="margin-top:20px">
        @foreach (var item in Model.AddSubMenu.ShowAllGroups)
        {
            <option value="@item.Id">
                @item.GroupTitle
            </option>
        }
    </select><br />
    <label>برند</label>
    <span asp-validation-for="AddSubMenu.Title" class="text-danger"></span>
    <input asp-for="AddSubMenu.Title" class="form-control" />
    <input type="submit" value="ثبت" class="btn btn-success" style="margin-top:10px" />
</form>