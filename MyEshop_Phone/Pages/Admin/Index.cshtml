@page
@model MyEshop_Phone.Pages.Admin.IndexModel
@{
    ViewBag.Title = "پنل مدیریتی ادمین";
}



<div class="alert alert-success" style="font-family: system-ui;font-size: x-large;margin: 20px;padding: 30px;text-align: center;">
    خوش برگشتی ادمین
</div>




<!-- /.col-lg-4 -->
<div class="col-lg-4">
    <div class="panel panel-primary" style="background-color:#0089ff;border-radius:9px">
        <div class="panel-heading" style="background-color:#0089ff;border-bottom:1px solid #1b78c7;border-radius:9px">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
