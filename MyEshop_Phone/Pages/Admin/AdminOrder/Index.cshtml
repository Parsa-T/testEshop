@page
@model MyEshop_Phone.Pages.Admin.AdminOrder.IndexModel
@{
    ViewData["Title"] = "خرید های کاربران";
}

<table class="table">
    <thead>
        <tr>
            <th>شماره سفارش</th>
            <th>نام کاربر</th>
            <th>مبلغ</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdminOrder)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.FullName</td>
                <td>@item.TotalPrice.ToString("N0")</td>
                <td>
                    <a asp-page="DownloadPdf" asp-route-id="@item.OrderId" class="btn btn-primary">دانلود pdf</a>
                </td>
            </tr>
        }
    </tbody>
</table>
