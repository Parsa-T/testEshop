@page
@model MyEshop_Phone.Pages.Admin.Products.IndexModel
@{
    ViewBag.Title = "محصولات";
}
<style>
    label {
        font-family: system-ui;
        font-size: medium;
    }
</style>
<br />
<p>
    <a asp-page="Add" class="btn btn-success">محصول جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>عکس</th>
            <th>عنوان گروه</th>
            <th>نام محصول</th>
            <th>توضیح مختصر</th>
            <th>قیمت</th>
            <th>زمان ثبت</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetAllProducts)
        {
            <tr>
                <td>
                    <img src="/AdminPanel/Photo/Products/@(item.ImageName)" class="thumbnail" style="max-width:120px" />
                </td>
                <td>
                    @item.GroupsTitle
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.ShortDescription
                </td>
                <td>
                    @item.Price.ToString("N0")
                </td>
                <td>
                    @item.CreateTime.ToShamsi()
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@(item.Id)" class="btn btn-warning">ویرایش</a>
                    <a asp-page="Delete" asp-route-id="@(item.Id)" class="btn btn-danger">حذف</a>
                    <a asp-page="/Admin/Products_Gallerise/Index"
                       asp-route-productId="@item.Id" class="btn btn-success">گالری</a>
                    <a href="/Admin/Products_Features/Ditlse?id=@(item.Id)" class="btn btn-primary">ویژگی محصولات</a>
                    <a href="/Admin/Products_Tags/Ditelse?id=@(item.Id)" class="btn btn-danger">تگ</a>
                    <a href="/Admin/ProductColor/Add" class="btn btn-warning">انتخاب رنگ</a>
                </td>
            </tr>
        }
    </tbody>
</table>