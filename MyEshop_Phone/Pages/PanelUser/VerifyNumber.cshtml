    <div class="lg:col-span-3">
        <form method="post">
            @Html.AntiForgeryToken()
            <input asp-for="EditNumber.Id" type="hidden" />
            <label>کد ارسالی رو وارد کنید</label>
            <input asp-for="EditNumber.Code" />
            <input id="btnsum" style="margin: 10px;padding: 5px;border-radius: 10px;background-color: #2563EB;width: 150px;color: white;font-family: inherit;font-weight: bold;" type="submit" value="تایید شماره تماس" class="btn btn-primary" />
            <div>
                <span id="timer">120</span> ثانیه تا ارسال مجدد
            </div>

            <button type="button" id="resendBtn" disabled>
                ارسال مجدد کد
            </button>

        </form>
    </div>
</div>
@section Scripts {
    <script>
        var timeLeft = 120;
        var timerElement = document.getElementById("timer");
        var resendBtn = document.getElementById("resendBtn");

        var countdown = setInterval(function () {

            timeLeft--;
            timerElement.textContent = timeLeft;

            if (timeLeft <= 0) {
                clearInterval(countdown);
                resendBtn.disabled = false;
                timerElement.textContent = "0";
            }

        }, 1000);
    </script>
    <script>
        document.getElementById("resendBtn").addEventListener("click", function () {

            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('?handler=ResendCode', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Server error");
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert("کد جدید ارسال شد");
                }
            })
            .catch(error => console.error(error));

        });
    </script>

}